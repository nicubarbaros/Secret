- content_for :title, t('recruiter.jobs.new.page_title')

= simple_form_for :job, :url => recruiter_jobs_path, :method => 'post' do |f|
  = f.input :name, autofocus: true, label: t('recruiter.jobs.new.name'), input_html: { required: true }
  = f.input :description, label: t('.description')
  = f.input :focus, collection: [[t('alg.focus.execution'), 'Execution'], [t('alg.focus.management'), 'Management'], 
    [t('alg.focus.client'), 'Client'],[t('alg.focus.development'), 'Development']], :include_blank => false, label: t('.focus')
  = f.input :company_spec_id, collection: CompanySpec.where(:owner_id => current_recruiter.id, :owner_type => current_recruiter.class.to_s), label: t('.company')
  = f.submit t('buttons.create')
