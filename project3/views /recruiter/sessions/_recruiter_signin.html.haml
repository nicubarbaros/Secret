%h2.statement-header
  = t('recruiter.sessions.index.statement')

= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .credential-form
    .text-input-wrapper
      = f.input :email, required: false, autofocus: true, label: t('recruiter.sessions.index.email')
    .text-input-wrapper
      = f.input :password, required: false, label: t('recruiter.sessions.index.password')
    .text-input-wrapper#checkbox
      = f.input :remember_me, label: t('sessions.remember'), as: :boolean if devise_mapping.rememberable?

    .extra-links
      = link_to t('sessions.register'), new_registration_path(resource_name)
      = link_to t('sessions.pass_recover'), new_password_path(resource_name)
      
    .submit-button
      = f.button :submit, t('sessions.login')

