.main-wrapper
  .container-flexible
    .inner-container
      .sign-in-wrapper
        .col-grid.col-4
          .sign-in-form
            .sign-in-company
              %h2.statement-header
                Admin Gaus
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .credential-form
                  .text-input-wrapper
                    = f.text_field  :email, required: false, autofocus: true, :class => "form-control", :placeholder => "Email"
                  .text-input-wrapper
                    = f.password_field :password, autocomplete: "off", required: false, :class => "form-control", :placeholder => "Password"
                  .text-input-wrapper#checkbox
                    - if devise_mapping.rememberable?
                      .field
                        = f.check_box :remember_me
                        = f.label :remember_me
                  .submit-button
                    = f.submit "Log in", :class => "btn btn-success btn-block btn-flat"

