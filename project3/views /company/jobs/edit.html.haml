- content_for :title, t("#{@job.name}")

.main-wrapper
  .container-flexible
    .inner-container
      .edit-entity-wrapper
        .col-grid.col-4
          .edit-entity-form
            = simple_form_for @job, :url => company_job_path(@job), :method => 'put' do |f|
              .credential-form
                .text-input-wrapper
                  = f.input :name, required: true, label: t('.name')
                .text-input-wrapper
                  = f.input :description, label: t('.description')
                .text-input-wrapper
                  = f.input :focus, collection: [[t('alg.focus.execution'), 'Execution'], [t('alg.focus.management'), 'Management'], [t('alg.focus.client'), 'Client'], [t('alg.focus.development'), 'Development']], :include_blank => false, label: t('.focus')
                .submit-button
                  = f.submit t('buttons.update')

