.main-wrapper
  .container-flexible
    .inner-container
      .sign-up-wrapper
        .col-grid.col-4
          .sign-up-form
            = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              %h2.statement-header
                = t('company.sessions.index.signup_as')
              .credential-form
                = f.error_notification
                .text-input-wrapper
                  = f.label :c_name, t('.company_name')
                  = text_field_tag :name, nil, :onchange => "if($(this).val()){$(':submit').prop('disabled', false)}else{$(':submit').prop('disabled', true)}"
                .text-input-wrapper
                  .tips
                    .tips-icon
                      .tips-info
                        %p
                          = t('recruiter.companies.tips.small')
                        %p
                          = t('recruiter.companies.tips.medium')
                        %p
                          = t('recruiter.companies.tips.big')
                        %p
                          = t('recruiter.companies.tips.large')
                  = f.label t('.org_size')
                  = select_tag :size, options_for_select([[t('alg.dynamics.small'), 'Small'], [t('alg.dynamics.medium'), 'Medium'], [t('alg.dynamics.big'), 'Big'], [t('alg.dynamics.large'), 'Large']])
                .text-input-wrapper
                  .tips
                    .tips-icon
                      .tips-info
                        %p
                          = t('recruiter.companies.tips.results')
                        %p
                          = t('recruiter.companies.tips.innovation')
                        %p
                          = t('recruiter.companies.tips.process')
                        %p
                          = t('recruiter.companies.tips.people')
                  = f.label t('.org_values')
                  = select_tag :values, options_for_select([[t('alg.typology.results'), 'Results'], [t('alg.typology.innovation'), 'Innovation'], [t('alg.typology.process'), 'Process'], [t('alg.typology.people'), 'People']])
                .text-input-wrapper
                  = f.input :email, required: true, autofocus: true, label: t('.email')
                .text-input-wrapper
                  = f.input :password, required: true, placeholder: (t('.password_hint') if @minimum_password_length), label: t('.password')
                .text-input-wrapper
                  = f.input :password_confirmation, required: true, label: t('.repeat_password')
                .extra-links#link-valign
                  = render "company/shared/links"
                .submit-button
                  = f.button :submit, t('sessions.register'), :disabled => true
