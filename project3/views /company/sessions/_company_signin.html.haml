%h2.statement-header
  = t('company.sessions.index.statement')

= simple_form_for(resource_company, as: resource_name_company, url: session_path(resource_name_company)) do |f|
  .credential-form
    .text-input-wrapper
      = f.input :email, required: false, autofocus: true, label: t('company.sessions.index.email')
    .text-input-wrapper
      = f.input :password, required: false, label: t('company.sessions.index.password')
    .text-input-wrapper#checkbox
      = f.input :remember_me, label: t('sessions.remember'), as: :boolean if devise_mapping_company.rememberable?

    .extra-links
      = link_to t('sessions.register'), new_registration_path(resource_name_company)
      = link_to t('sessions.pass_recover'), new_password_path(resource_name_company)

    .submit-button
      = f.button :submit, t('sessions.login')
